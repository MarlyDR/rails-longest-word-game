<h1>New game</h1>

<ul>
  <% @letters.each do |i| %>
    <li><%= i %></li>
  <% end %>
</ul>

<p>What is the longest word you can find?</p>

<form action="/score"  method="POST" data-turbo="false" class="form-inline">
  <input type="text" name="word" placeholder="put your word here">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
